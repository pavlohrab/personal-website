---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const allNews = await getCollection('news');
	// Only create pages for news items that have body content
	const newsWithContent = allNews.filter(news => news.body && news.body.trim().length > 0);

	return newsWithContent.map(news => ({
		params: { slug: news.id },
		props: { entry: news }
	}));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<BaseLayout
	title={entry.data.title}
	description={entry.data.description}
>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="news-header">
				<a href="/news/" class="back-link">‚Üê All News</a>
				<h1 class="news-title">{entry.data.title}</h1>
				<time class="news-date">{entry.data.date}</time>
			</header>

			<main class="news-content">
				<div class="content-body">
					<Content />
				</div>
			</main>
		</div>
	</div>
</BaseLayout>

<style>
	.news-header {
		padding-block: 2.5rem;
		text-align: center;
		max-width: 50rem;
		margin-inline: auto;
	}

	.back-link {
		display: inline-block;
		margin-bottom: 1.5rem;
		color: var(--accent-regular);
		text-decoration: none;
		font-size: var(--text-sm);
		transition: color var(--theme-transition);
	}

	.back-link:hover {
		color: var(--accent-dark);
	}

	.news-title {
		font-size: var(--text-4xl);
		color: var(--gray-0);
		margin: 0 0 1rem;
		line-height: 1.2;
	}

	.news-date {
		display: block;
		font-size: var(--text-base);
		color: var(--accent-regular);
		font-weight: 600;
	}

	.news-content {
		max-width: 65rem;
		margin-inline: auto;
	}

	.content-body {
		padding: 2rem;
		background: var(--gray-999);
		border-radius: 0.75rem;
		border-left: 4px solid var(--accent-regular);
		box-shadow: var(--shadow-md);
		color: var(--gray-200);
		line-height: 1.7;
	}

	.content-body :global(h2) {
		color: var(--gray-0);
		font-size: var(--text-2xl);
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.content-body :global(h3) {
		color: var(--gray-0);
		font-size: var(--text-xl);
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
	}

	.content-body :global(p) {
		margin-bottom: 1rem;
	}

	.content-body :global(a) {
		color: var(--accent-regular);
		text-decoration: underline;
	}

	.content-body :global(a:hover) {
		color: var(--accent-dark);
	}

	.content-body :global(ul),
	.content-body :global(ol) {
		margin-bottom: 1rem;
		padding-left: 1.5rem;
	}

	.content-body :global(li) {
		margin-bottom: 0.5rem;
	}

	.content-body :global(code) {
		background: var(--gray-800);
		padding: 0.2rem 0.4rem;
		border-radius: 0.25rem;
		font-size: 0.9em;
	}

	.content-body :global(pre) {
		background: var(--gray-800);
		padding: 1rem;
		border-radius: 0.5rem;
		overflow-x: auto;
		margin-bottom: 1rem;
	}

	@media (max-width: 50em) {
		.news-title {
			font-size: var(--text-3xl);
		}

		.content-body {
			padding: 1.5rem;
		}
	}
</style>

<script>
	// Smart back button: go to referring page if from same site, otherwise fallback to news list
	const backLink = document.querySelector('.back-link');
	if (backLink) {
		backLink.addEventListener('click', (e) => {
			const referrer = document.referrer;
			const currentDomain = window.location.origin;

			// If user came from somewhere on our site, go back in history
			if (referrer && referrer.startsWith(currentDomain)) {
				e.preventDefault();
				window.history.back();
			}
			// Otherwise, let the default href handle it (goes to /news/)
		});
	}
</script>
