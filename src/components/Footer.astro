---
import Icon from './Icon.astro';

const currentYear = new Date().getFullYear();
---

<footer>
	<p>&copy; {currentYear} Pavlo Hrab. All rights reserved.</p>
	<p class="footer-contact"><a href="/contact/">Get in Touch</a></p>
	<p class="claude-credit">Made with help of Claude Sonnet 4.5</p>
</footer>
<style>
	footer {
		margin-top: auto;
		padding: 2.5rem 2rem;
		text-align: center;
		color: var(--gray-400);
		font-size: var(--text-sm);
		border-top: 1px solid var(--gray-800);
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	footer p {
		margin: 0;
	}

	.footer-contact a {
		color: var(--accent-regular);
		text-decoration: none;
		font-weight: 500;
		transition: color var(--theme-transition);
	}

	.footer-contact a:hover {
		color: var(--accent-dark);
	}

	.claude-credit {
		font-size: var(--text-xs);
		color: var(--gray-500);
		opacity: 0.6;
	}

	@media (min-width: 50em) {
		footer {
			padding: 2.5rem 5rem;
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			gap: 3rem;
		}

		.footer-contact {
			position: relative;
			right: auto;
			margin-right: 6rem;
		}

		.claude-credit {
			margin-left: auto;
		}
	}
</style>
