---
/**
 * Grid Component
 * Reusable grid layout with different variants
 */

interface Props {
	variant?: 'projects' | 'projects-compact' | 'travel' | 'blog';
	class?: string;
}

const { variant = 'projects', class: className } = Astro.props;

const gridClass = {
	'projects': 'projects-grid',
	'projects-compact': 'projects-grid compact',
	'travel': 'travel-grid',
	'blog': 'blog-list stack gap-6'
}[variant];
---

<div class:list={[gridClass, className]}>
	<slot />
</div>
